{
	"name": "@unisig/solid",
	"version": "0.1.0",
	"description": "Solid.js adapter for unisig - reactive state with signals",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"unisig",
		"solid-js",
		"signals",
		"reactivity",
		"adapter",
		"reactive",
		"state"
	],
	"author": "Ronan Sandford",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/unisig.git",
		"directory": "packages/solid"
	},
	"homepage": "https://github.com/wighawag/unisig#readme",
	"bugs": {
		"url": "https://github.com/wighawag/unisig/issues"
	},
	"type": "module",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"peerDependencies": {
		"@unisig/tracker": "workspace:*",
		"solid-js": "1.x.x",
		"unisig": "workspace:*"
	},
	"devDependencies": {
		"@unisig/tracker": "workspace:*",
		"prettier": "^3.8.1",
		"solid-js": "1.x.x",
		"typescript": "^5.3.0",
		"unisig": "workspace:*",
		"vitest": "^4.0.17"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "tsc"
	}
}
