{
	"name": "@unisig/scope",
	"version": "0.0.1",
	"description": "Scope and granular dependency tracking for unisig",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"unisig",
		"scope",
		"reactivity",
		"signals",
		"granular",
		"tracking",
		"proxy"
	],
	"author": "Ronan Sandford",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/unisig.git",
		"directory": "packages/scope"
	},
	"homepage": "https://github.com/wighawag/unisig#readme",
	"bugs": {
		"url": "https://github.com/wighawag/unisig/issues"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"dependencies": {
		"unisig": "workspace:*"
	},
	"devDependencies": {
		"prettier": "^3.8.1",
		"typescript": "^5.3.0",
		"vitest": "^4.0.17"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "tsc",
		"test": "vitest run",
		"test:watch": "vitest",
		"bench": "vitest bench",
		"bench:baseline": "vitest bench --outputJson baseline.json",
		"bench:compare": "vitest bench --compare baseline.json",
		"bench:report": "vitest bench --reporter=json"
	}
}