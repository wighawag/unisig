{
	"name": "unisig",
	"version": "0.0.1",
	"description": "Universal signals - add reactivity to any data with pluggable signal adapters and built-in events",
	"keywords": [
		"unisig",
		"signals",
		"reactivity",
		"events",
		"reactive",
		"state",
		"solid",
		"preact",
		"vue",
		"svelte",
		"mobx",
		"framework-agnostic",
		"universal"
	],
	"author": "Ronan Sandford",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/unisig.git",
		"directory": "packages/unisig"
	},
	"homepage": "https://github.com/wighawag/unisig#readme",
	"bugs": {
		"url": "https://github.com/wighawag/unisig/issues"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"devDependencies": {
		"prettier": "^3.8.0",
		"typescript": "^5.3.0",
		"vitest": "^2.0.0"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier .",
		"build": "tsc",
		"test": "vitest run",
		"test:watch": "vitest",
		"bench": "vitest bench",
		"bench:baseline": "vitest bench --outputJson baseline.json",
		"bench:compare": "vitest bench --compare baseline.json",
		"bench:report": "vitest bench --reporter=json"
	}
}
