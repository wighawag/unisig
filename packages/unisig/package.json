{
	"name": "unisig",
	"version": "0.1.0",
	"description": "Universal signals - framework-agnostic reactive state with pluggable signal adapters",
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"unisig",
		"signals",
		"reactivity",
		"events",
		"reactive",
		"state",
		"solid-js",
		"preact",
		"vue",
		"svelte",
		"mobx",
		"framework-agnostic",
		"universal"
	],
	"author": "Ronan Sandford",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wighawag/unisig.git",
		"directory": "packages/unisig"
	},
	"homepage": "https://github.com/wighawag/unisig#readme",
	"bugs": {
		"url": "https://github.com/wighawag/unisig/issues"
	},
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"devDependencies": {
		"prettier": "^3.8.1",
		"typescript": "^5.3.0",
		"vitest": "^4.0.17"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"build": "tsc",
		"test": "vitest run",
		"test:watch": "vitest"
	}
}
