{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": false,
		"noEmit": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js"
	},
	"include": ["test/**/*"],
	"exclude": ["node_modules", "dist"]
}